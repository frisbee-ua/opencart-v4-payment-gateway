{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-right">
                <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fas fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-light"><i class="fas fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="card">
            <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
            <div class="card-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment">
                    <div class="form-group row">
                        <label for="input-order-status" class="col-sm-2 col-form-label">{{ entry_merchant }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_frisbee_merchant" value="{{ payment_frisbee_merchant }}"
                                   class="form-control"/>
                            {% if error_merchant %}
                                <span class="error">{{ error_merchant }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-status" class="col-sm-2 col-form-label">{{ entry_secretkey }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_frisbee_secretkey" value="{{ payment_frisbee_secretkey }}"
                                   class="form-control"/>
                            {% if error_secretkey %}
                                <span class="error">{{ error_secretkey }}</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_currency }}</label>
                        <div class="col-sm-10">
                            <select name="payment_frisbee_currency" class="form-control">
                                {% for payment_frisbee_currenc in payment_frisbee_currencies %}
                                    {% if payment_frisbee_currenc == payment_frisbee_currency %}
                                        <option value="{{ payment_frisbee_currenc }}"
                                                selected="selected">{{ payment_frisbee_currenc }}</option>
                                    {% else %}
                                        <option value="{{ payment_frisbee_currenc }}">{{ payment_frisbee_currenc }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_language }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_frisbee_language" value="{{ payment_frisbee_language }}"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_order_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_frisbee_order_status_id" id="input-order-status" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_frisbee_order_status_id %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_order_status_cancelled }}</label>
                        <div class="col-sm-10">
                            <select name="payment_frisbee_order_cancelled_status_id" id="input-order-status"
                                    class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_frisbee_order_cancelled_status_id %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_order_process_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_frisbee_order_process_status_id" id="input-order-status" class="form-control">
                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_frisbee_order_process_status_id %}
                                        <option value="{{ order_status.order_status_id }}"
                                                selected="selected">{{ order_status.name }}</option>
                                    {% else %}
                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="payment_frisbee_status" id="input-status" class="form-control">
                                {% if payment_frisbee_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input-sort-order" class="col-sm-2 col-form-label">{{ entry_sort_order }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_frisbee_sort_order" value="{{ payment_frisbee_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
